#!/usr/bin/env sh

sgr () (
    printf "\033[%sm%s\033[0m" "$1" "$2"
)

gen_diffprg () (
    diffprg="$(mktemp)"
    echo '
    #!/usr/bin/env sh

    diff -d "$@"
    ' > "$diffprg"
    chmod +x "$diffprg"
    echo "$diffprg"
)

diff3_get_ed_patch () (
    diffprg="$1"
    shift 1
    if [ -s "$2" ]; then
        diff3 -x --diff-program="$diffprg" "$1" "$2" "$3" 2> /dev/null
    else
        "$diffprg" --ed "$1" "$3"
    fi
)

git_get_filenames () (
    git diff --diff-filter=ARMC --name-status $1 $2 | cut -f2-
)

vim_get_filetype () (
    vim --clean -es \
        +'exec "!echo ".&ft' \
        +"quit!" \
        "$1"
)

git_get_formatter () (
    ft="$(vim_get_filetype "$1")"
    [ -z "$ft" ] && return

    if [ -e ".gitconfig" ]; then
        fmtprg="$(git config --file=.gitconfig --get stylecheck."$ft")"
        if [ -n "$fmtprg" ]; then
            echo "$fmtprg"
            return
        fi
    fi

    git config --get stylecheck."$ft"
)

git_retrieve () (
    obj="$1"
    file="$2"
    out="$3"

    if [ -n "$obj" ]; then
        git show "$obj":"$file" 2> /dev/null > "$out"
    elif [ -e "$file" ]; then
        cat "$file" > "$out"
    fi
    ret="$?"
    [ "$ret" != 0 ] && printf "" > "$out"
    return "$ret"
)

vim_apply_patch () (
    in="$1"
    out="$2"
    patch="$3"
    vim -u NONE -es \
        -S "$patch" \
        +"w! $out" \
        +"quit!" \
        "$in"
)

git_display_diff () (
    [ -t 1 ] && git_color_opt="--color" || git_color_opt=
    git diff $git_color_opt "$1" "$2" | sed \
        -e "s|a$1|a/$3|" \
        -e "s|b$2|b/$3|"
)

process_file () (
    obj1="$1"
    obj2="$2"
    line="$3"
    diffprg="$4"

    old_name="$(echo "$line" | cut -f1)"
    cur_name="$(echo "$line" | cut -f2)"
    [ -z "$cur_name" ] && cur_name="$old_name"

    formatter="$(git_get_formatter "$cur_name")"

    if [ -z "$formatter" ]; then
        return
    fi

    tempdir="$(mktemp -d)"

    old="$tempdir"/old
    cur="$tempdir"/cur
    new="$tempdir"/new
    patch="$tempdir"/patch

    git_retrieve "$obj2" "$cur_name" "$cur"
    git_retrieve "$obj1" "$old_name" "$old"

    eval "$formatter" "$cur" > "$new" 2> /dev/null

    if diff -s "$cur" "$new" > /dev/null; then
        return
    fi

    diff3_get_ed_patch "$diffprg" "$cur" "$old" "$new" > "$patch"

    if [ -s "$patch" ]; then
        vim_apply_patch "$cur" "$new" "$patch"
        git_display_diff "$cur" "$new" "$cur_name"
    fi

    rm "$old" "$cur" "$new" "$patch"
    rmdir "$tempdir"
)

main () (
    obj1="${1:-HEAD}"
    obj2="$2"

    diffprg="$(gen_diffprg)"

    git_get_filenames "$obj1" "$obj2" | while read -r line; do
        process_file "$obj1" "$obj2" "$line" "$diffprg"
    done

    rm "$diffprg"
)

main "$@"
